{% extends "base.html.jinja" %}
{% block content %}
    {% if error %}
        <div class="alert alert-danger">{{error}}</div>
    {% endif %}

    <form class="row g-3" action="{{url_for('extract')}}" method="POST">
        <div class="col-3">
            <label for="product_id" class="form-label">Podaj kod produktu z Ceneo.pl</label>
        </div>
         <div class="col-8">
            <input type="text" class="form-control text-center" id="product_id" name="product_id" placeholder="Kod produktu">
        </div>
        <div class="col-auto">
            <input type="submit" class="btn btn-outline-info" value="Pobierz">
        </div>
    </form>

{% endblock %}